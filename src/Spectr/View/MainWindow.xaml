<Window x:Class="Spectr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:l="clr-namespace:Spectr"
        xmlns:vm="clr-namespace:Spectr.ViewModel"
        xmlns:cmd="clr-namespace:Spectr.Commands" 
        
        
    mc:Ignorable="d" MinWidth="1080" MinHeight="600" Height="600" Width="1080" WindowStartupLocation="CenterScreen" WindowStyle="None" Foreground="White">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    
    <!-- Стиль для Tabconrol -->
    <Window.Resources>
        <Style x:Key="TabItemStyle1" TargetType="{x:Type TabItem}">
            <Setter Property="Height" Value="50"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="#FF8F8E8E"/>
            <Setter Property="Foreground" Value="#FF2196F3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" BorderThickness="1,1,1,0" CornerRadius="10,10,0,0" BorderBrush="Gainsboro">
                            <ContentPresenter x:Name="ContentSite" HorizontalAlignment="Center" VerticalAlignment="Center" ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="TextElement.Foreground" TargetName="ContentSite" Value="#FF2196F3"/>
                                <Setter Property="BorderBrush" TargetName="Border" Value="#FF2196F3"/>
                                <Setter Property="BorderThickness" TargetName="Border" Value="1,1,1,3"/>
                                <Setter TargetName="Border" Property="Background" Value="#FFA4A4A4"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="TextElement.Foreground" TargetName="ContentSite" Value="#FF2196F3"/>
                                <Setter Property="BorderBrush" TargetName="Border" Value="Gainsboro"/>
                                <Setter Property="BorderThickness" TargetName="Border" Value="1,1,1,0"/>
                                <Setter TargetName="Border" Property="Background" Value="#FFCFCECE" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True" Background="Gainsboro">
        <!-- Хедер -->
        <Grid Height="40" DockPanel.Dock="Top"  VerticalAlignment="Top" Background="Gainsboro">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="720" Background="Gainsboro">
                <Button Content="{Binding Title, UpdateSourceTrigger=PropertyChanged}"  Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF969696" Width="250" FontSize="15" FontWeight="Bold" VerticalAlignment="Center" Cursor="Hand"/>
                <Button Content="" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFA2A2A2" Width="470" PreviewMouseDown="Window_MouseDown" Cursor="Cross" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center"  Width="350" Background="Gainsboro">
                <Button Content="FAQ" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFA2A2A2" FontSize="15" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button Content="CONTACT" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFA2A2A2" FontSize="15" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button Content="MY ACCOUNT" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFA2A2A2" FontSize="15" FontWeight="Bold" VerticalAlignment="Center"/>
                <!--<Button Background="{x:Null}" BorderBrush="{x:Null}"  VerticalAlignment="Center" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Command="{Binding CloseAppCommand}"  Cursor="Hand"> -->
                <Button Background="{x:Null}" BorderBrush="{x:Null}"  VerticalAlignment="Center" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"  Cursor="Hand">
                    <materialDesign:PackIcon Kind="Power" Height="25" Width="25" Foreground="#FFA2A2A2"/>
                    <Button.Command>
                        <cmd:CloseAppCommand/>
                    </Button.Command>
                </Button>
            </StackPanel>
        </Grid>
        <!-- Низ -->
        <Grid HorizontalAlignment="left" DockPanel.Dock="Bottom">
            <StatusBar Height="40"  Margin="10 10" Background="Gainsboro">
                <TextBlock Text="{Binding Status}" Background="{x:Null}"  Foreground="#FFA2A2A2" FontSize="15" FontWeight="Bold" VerticalAlignment="Center" Cursor="Hand"/>
            </StatusBar>
        </Grid>
        <!-- Центр -->
        <Grid Margin="10 0" Background="#FFCFCECE">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TabControl>
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Height" Value="50"/>
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="Background" Value="#FF8F8E8E"/>
                        <Setter Property="Foreground" Value="#FF2196F3"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="FontSize" Value="17"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border x:Name="Border" BorderThickness="0,1,1,0" CornerRadius="5,5,0,0" BorderBrush="Gainsboro">
                                        <ContentPresenter x:Name="ContentSite" HorizontalAlignment="Center" VerticalAlignment="Center" ContentSource="Header"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="TextElement.Foreground" TargetName="ContentSite" Value="#FF2196F3"/>
                                            <Setter Property="BorderBrush" TargetName="Border" Value="#FF2196F3"/>
                                            <Setter Property="BorderThickness" TargetName="Border" Value="1,1,1,3"/>
                                            <Setter TargetName="Border" Property="Background" Value="#FFA4A4A4"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter Property="TextElement.Foreground" TargetName="ContentSite" Value="#FF2196F3"/>
                                            <Setter Property="BorderBrush" TargetName="Border" Value="Gainsboro"/>
                                            <Setter Property="BorderThickness" TargetName="Border" Value="1,1,1,0"/>
                                            <Setter TargetName="Border" Property="Background" Value="#FFCFCECE" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
                <TabItem Uid="0" Header="Клиенты" Cursor="Hand" >
                        <DataGrid AutoGenerateColumns="False" HorizontalAlignment="left" VerticalAlignment="Stretch" Width="700" Margin="0 5" ItemsSource="{Binding Customers}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Имя клиента" Binding="{Binding CustomerFirstName}"/>
                                <DataGridTextColumn Header="Фамилия клиента" Binding="{Binding CustomerSecontName}"/>
                                <DataGridTextColumn Header="Паспорт" Binding="{Binding DocNumber}"/>
                                <!-- Добавь столбцы -->
                            </DataGrid.Columns>
                        </DataGrid>

                    </TabItem>
                    <TabItem Uid="1" Header="FirstTAB" ></TabItem>
                    <TabItem Uid="2" Header="FirstTAB" Background="#FFA4A4A4" BorderBrush="#FF2196F3" Foreground="#FF2196F3" Cursor="Hand"></TabItem>
                    <TabItem Uid="3" Header="FirstTAB" Background="#FFA4A4A4" BorderBrush="#FF2196F3" Foreground="#FF2196F3" Cursor="Hand"></TabItem>
                    <TabItem Uid="4" Header="FirstTAB" Background="#FFA4A4A4" BorderBrush="#FF2196F3" Foreground="#FF2196F3" Cursor="Hand"></TabItem>
                    <TabItem Uid="5" Header="FirstTAB" Background="#FFA4A4A4" BorderBrush="#FF2196F3" Foreground="#FF2196F3" Cursor="Hand"></TabItem>
                </TabControl>
            
        </Grid>



    </DockPanel>




